"Pais":{
	"type":"object",
	"properties": {
		"id_pais":{"type":"integer"},
		"nombre":{"type":"string"},
		"escuelas":{"type":"array", "items":{"type":"integer"}},
		"arbitros":{"type":"array", "items":{"type":"integer"}}
	},
	"requiered":["id_pais", "nombre"]
}

"Escuela":{
	"type":"object",
	"properties": {
		"id_escuela":{"type":"integer"},
		"nombre":{"type":"string"},
		"competidores":{"type":"array", "items":{"type":"integer"}},
		"pais":{"type":"integer"},
		"maestro":{
			"type":"object",
			"properties":{
				"nro_placa_instructor":{"type":"integer"},
				"nombre":	{"type":"string"},
				"apellido":	{"type":"string"},
				"graduacion":{"type":"integer"},
			},
			"requiered":["nro_placa_instructor"]
		},
		"campeonatos":{"type":"array", "items":
				{	"type":"object",
					"properties":{
						"campeonato":{"type":"integer"},
						"medallas":{"type":"integer"},
						"cantCompetencia":{"type":"integer"}
					}
				}
		}

	},
	"requiered":["id_escuela", "nombre", "maestro", "pais"]
}

"Coach":{
	"type":"object",
	"properties": {
		"dni":{"type":"integer"},
		"nombre":{"type":"string"},
		"apellido":{"type":"string"},
		"nro_ITF":{"type":"integer"},
		"foto":{"type":"string"},
		"graduacion":{"type":"integer"},
		"escuela":{"type":"integer"},
	},
	"requiered":["dni", "escuela"]
}


"Competidor":{
	"type":"object",
	"properties": {
		"dni":{"type":"integer"},
		"nombre":{"type":"string"},
		"apellido":{"type":"string"},
		"escuela":{"type":"integer"},
		"nro_ITF":{"type":"integer"},
		"foto":{"type":"string"},
		"graduacion":{"type":"integer"},
		"fecha_nacimiento":{"type":"string", "format": "date-time"},
		"peso":{"type":"number"},
		"esTitular":{"type":["null", "string"]},
		"coach":{"type":["null", "string"]},
		"equipos":{"type":"array", "items":{"type":"integer"}},
		"medallero":{"type":"array", "items":
			{	"type":"object",
				"properties":{
					"modalidad":{"type":"integer"},
					"cantMedallas":{"type":"integer"}
				}
			}
		}
		
	},
	"requiered":["dni", "escuela"]
}


"Equipo":{
	"type":"object",
	"properties": {
		"id_equipo":{"type":"integer"},
		"nombre":{"type":"string"},
		"competidores":{"type":"array", "items":{"type":"integer"}},
		"coach": {"type":"integer"}
	},
	"requiered":["id_equipo", "coach"]
}



"Modalidad":{
	"type":"object",
	"properties": {
		"id_modalidad":{"type":"integer"},
		"modo":{"type":"string"},
		"edad_minima":{"type":"integer"},
		"edad_maxima":{"type":"integer"},
		"peso_minimo":{"type":"integer"},
		"peso_maximo":{"type":"integer"},
		"genero":{"type":"string"},
		"graduacion":{"type":"integer"},
		"competencias":{"type":"array", "items":{"type":"integer"}},
	}
}



"Competencia":{
	"type":"object",
	"properties": {
		"id_competencia":{"type":"integer"},
		"descripcion":{"type":"string"},
		"modalidad":{"type":"integer"},
		"arbitros":{"type":"array", "items":{"type":"integer"}},
		"campeonato":{"type":"integer"},
		"encuentros":{"type":"array", "items":{"type":"Encuentro"}},
	}
}



"Campeonato":{
	"type":"object",
	"properties": {
		"id_campeonato":{"type":"integer"},
		"nombre":{"type":"string"},
		"fecha_inicio":{"type":"string", "format": "date-time"},
		"fecha_fin":{"type":"string", "format": "date-time"},
		"competencias":{"type":"array", "items":[{"type":"integer"}]},
		"ganadores":{"type":"array", "items":
			{	"type":"object",
				"properties":{
				"competidor":{"type":"integer"},
				"encuentro_ganados":{"type":"integer"}
				}
			}
		},
	},
	"requiered":["id_campeonato", "fecha_inicio", "fecha_fin"]
}



"Arbitro":{
	"type":"object",
	"properties": {
		"nro_placa":{"type":"integer"},
		"nombre":{"type":"string"},
		"apellido":{"type":"string"},
		"graduacion":{"type":"integer"},
		"pais":{"type":"integer"},
		"competencias":{"type":"array", "items":{"type":"integer"}},
		"cantidad_compeonatos":{"type":"integer"}
	},
	"requiered":["nro_placa", "pais"]
}



"Encuentro":{
	"type":"object",
	"properties": {
		"id_competencia":{"type":"integer"},
		"nro_encuetro":{"type":"integer"},
		"id_equipo":{"type":["null", "boolean"]},
		"competidorA":{"type":"integer"},
		"competidorB":{"type":"integer"},
		"ganador":{"type":"integer"},
	},
	"requiered":["id_competencia", "nro_encuetro"]
}



